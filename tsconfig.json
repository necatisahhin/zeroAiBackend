{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
     "module": "CommonJS",
    "target": "ES2016",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
  }
  },
  "include": ["src/**/*", "generated/**/*"],
  "exclude": ["node_modules"]
}
